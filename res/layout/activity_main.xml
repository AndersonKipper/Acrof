<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paisagem_efeito"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.acrofjogo.MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:src="@drawable/titulo" />

    <Button
        android:id="@+id/novoJogo"
        style="@style/BootstrapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:height="50dp"
        android:onClick="novoJogo"
        android:text="Novo Jogo"
        android:textColor="@color/text"
        android:width="220dp" />

    <Button
        android:id="@+id/instrucoes"
        style="@style/BootstrapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/novoJogo"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal|center"
        android:height="50dp"
        android:text="Instruções"
        android:textColor="@color/text"
        android:width="220dp" />

    <Button
        android:id="@+id/sair"
        style="@style/BootstrapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instrucoes"
        android:layout_centerHorizontal="true"
        android:height="50dp"
        android:onClick="sair"
        android:text="Sair"
        android:textColor="@color/text"
        android:width="220dp" />

</RelativeLayout>